// For format details, see https://aka.ms/vscode-remote/devcontainer.json or this file's README at:
// https://github.com/microsoft/vscode-dev-containers/tree/v0.112.0/containers/ruby-2-rails-5
{
	"name": "Ruby 2 Rails",
	"dockerFile": "Dockerfile",
	// Set *default* container specific settings.json values on container create.
	"settings": {
		"terminal.integrated.shell.linux": "/bin/bash"
	},
	// Add the IDs of extensions you want installed when the container is created.
	"extensions": [
		"rebornix.Ruby"
	],
	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	"forwardPorts": [
		3000
	],
	"mounts": [
		// create this volume if it doesn't exist: `docker volume create negronicache`
		// You won't regret it. This lets it keep the gem installs between containers.
		"type=volume,source=negronicache,target=/devcache",
	],
	"containerEnv": {
		// store zillions of gems on the volume
		"GEM_HOME": "/devcache/gems"
	},
	"remoteEnv": {
		"PATH": "/devcache/gems/bin:${containerEnv:PATH}"
	},
	// Use 'postCreateCommand' to run commands after the container is created.
	"postCreateCommand": "echo \"alias gs='git status'\" >> /root/.bashrc"
	// Uncomment to connect as a non-root user. See https://aka.ms/vscode-remote/containers/non-root.
	// "remoteUser": "vscode"
}